
# Stage 1: Build
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build

# Declare build args
ARG JWT_SECRET_KEY
ARG BLAZOR_APP_URL
ARG DB_CONNECTION_STRING
ARG AUTH_API_BASE_URL

ARG ZAMMAD_API_URL
ARG ZAMMAD_USERNAME
ARG ZAMMAD_PASSWORD


# expose as ENV
ENV JWT_SECRET_KEY=$JWT_SECRET_KEY
ENV BLAZOR_APP_URL=$BLAZOR_APP_URL
ENV DB_CONNECTION_STRING=$DB_CONNECTION_STRING
ENV AUTH_API_BASE_URL=$AUTH_API_BASE_URL

ENV ZAMMAD_API_URL=$ZAMMAD_API_URL
ENV ZAMMAD_USERNAME=$ZAMMAD_USERNAME
ENV ZAMMAD_PASSWORD=$ZAMMAD_PASSWORD

WORKDIR /src

COPY . .
RUN dotnet restore
RUN dotnet publish -c Release -o /app/publish

# Stage 2: Run
FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /app/publish .

EXPOSE 7254

ENTRYPOINT ["dotnet", "SecureArchCore.dll"]
